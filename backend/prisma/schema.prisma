generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id             Int      @id @default(autoincrement())
  username       String   @unique
  password       String
  secretPassword String   @default("DEFAULTSECRET")
  role           String
  createdAt      DateTime @default(now())
}

model Call {
  id          Int      @id @default(autoincrement())
  customerName String
  phone       String
  email       String?
  address     String?
  customerId  Int?
  customer    Customer? @relation(fields: [customerId], references: [id])
  problem     String
  category    String
  status      String
  assignedTo  String?
  assignedAt  DateTime?
  assignedBy  String?
  createdBy   String
  createdAt   DateTime @default(now())
  completedBy String?
  completedAt DateTime?
  remark      String?
  engineerRemark String?
  callCount   Int      @default(1)
  lastCalledAt DateTime @default(now())
  
  @@index([assignedTo])
  @@index([createdBy])
  @@index([phone, category, status])
}

model Customer {
  id              Int       @id @default(autoincrement())
  name            String
  phone           String    @unique
  email           String?
  address         String?
  createdAt       DateTime  @default(now())
  totalCalls      Int       @default(0)
  lastCallDate    DateTime?

  calls           Call[]
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    String
  message   String
  type      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  callId    Int?
  
  @@index([userId, isRead])
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
