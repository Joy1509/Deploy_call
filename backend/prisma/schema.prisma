generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())
}

model Call {
  id          Int      @id @default(autoincrement())
  customerName String
  phone       String
  email       String?
  address     String?
  customerId  Int?
  customer    Customer? @relation(fields: [customerId], references: [id])
  problem     String
  category    String
  status      String
  assignedTo  String?
  assignedAt  DateTime?
  assignedBy  String?
  createdBy   String
  createdAt   DateTime @default(now())
  completedBy String?
  completedAt DateTime?
  remark      String?
  engineerRemark String?
  
  @@index([assignedTo])
  @@index([createdBy])
}

model Customer {
  id          Int      @id @default(autoincrement())
  name        String
  phone       String   @unique
  email       String?
  address     String?
  createdAt   DateTime @default(now())

  calls       Call[]
}
